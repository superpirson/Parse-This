<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
            xmlns:jxb="http://java.sun.com/xml/ns/jaxb"
            jxb:version="2.0">

<xsd:element name="MainGameData" type="GameData"/>

<xsd:complexType name="GameData">
 <xsd:sequence>
  <xsd:element name = "author" type = "xsd:string"/> 
  <xsd:element name = "startingState" type = "State"/> 
 </xsd:sequence>
<xsd:attribute name = "NAME" type = "xsd:ID" use="required"/> 
</xsd:complexType>

<xsd:complexType name="State">
  <xsd:sequence>
  <xsd:element name = "text" type = "xsd:string"/> 
  <xsd:element name = "titleText" type = "xsd:string"/> 
    <xsd:element name="transition" type="Transition" minOccurs="1" maxOccurs="unbounded"/>
  </xsd:sequence>
  <xsd:attribute name = "NAME" type = "xsd:ID" use="required"/> 
</xsd:complexType>

<xsd:complexType name="Transition">
 <xsd:sequence> 
  <xsd:element name = "state" type = "State"/> 

    <xsd:element  name = "keyword" type = "xsd:string" minOccurs="1" maxOccurs="unbounded"/>
  </xsd:sequence>
  <xsd:attribute name = "NAME" type = "xsd:ID" use="required"/> 
</xsd:complexType>

</xsd:schema>
